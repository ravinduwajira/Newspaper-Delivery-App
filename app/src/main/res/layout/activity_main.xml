<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackground"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="309dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="85dp"
        android:background="@drawable/custom_edittext"
        android:clipChildren="true"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">


            <TextView
                android:id="@+id/loginText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Distributor Login"
                android:textAlignment="center"
                android:textColor="#0D65F8"
                android:textSize="36sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/distributor_id_edit_text"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/loginText"
                android:layout_marginTop="40dp"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/baseline_person_24"
                android:drawablePadding="8dp"
                android:hint="Distributor ID"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background" />

            <EditText
                android:id="@+id/password_edit_text"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/distributor_id_edit_text"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:drawablePadding="8dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background" />

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/password_edit_text"
                android:layout_marginTop="30dp"
                android:backgroundTint="#0D65F8"
                android:text="Login"
                android:textSize="18sp"
                app:cornerRadius="20dp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:srcCompat="@drawable/bike" />

    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="655dp"
        android:fontFamily="@font/akaya_telivigala"
        android:text="PressPal"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="76sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/titleText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="81dp"
        android:layout_marginBottom="623dp"
        android:fontFamily="@font/baloo_da"
        android:text="&quot;Reliable. Efficient. Delivered.&quot;"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/signupText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="666dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="30dp"
        android:padding="8dp"
        android:text="Not yet registered? SignUp Now"
        android:textAlignment="center"
        android:textColor="#0D65F8"
        android:textSize="14sp" />


</RelativeLayout>
