<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackground"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:srcCompat="@drawable/sbg" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="85dp"
        android:background="@drawable/custom_edittext"
        android:clipChildren="true"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">


            <TextView
                android:id="@+id/loginText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Distributor SignUp"
                android:textAlignment="center"
                android:textColor="#0D65F8"
                android:textSize="36sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/distributor_id_edit_text"
                android:layout_width="313dp"
                android:layout_height="64dp"
                android:layout_below="@id/loginText"
                android:layout_marginTop="148dp"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/baseline_person_24"
                android:drawablePadding="8dp"
                android:hint="Distributor ID"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="306dp"
                android:layout_height="62dp"
                android:layout_below="@id/distributor_id_edit_text"
                android:layout_marginTop="9dp"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:drawablePadding="8dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background" />

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="313dp"
                android:layout_height="74dp"
                android:layout_below="@id/etPassword"
                android:layout_marginTop="3dp"
                android:backgroundTint="#0D65F8"
                android:text="SignUp"
                android:textSize="18sp"
                app:cornerRadius="20dp" />

            <EditText
                android:id="@+id/distributor_email"
                android:layout_width="306dp"
                android:layout_height="60dp"
                android:layout_below="@id/loginText"
                android:layout_marginTop="78dp"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/baseline_email_24"
                android:drawablePadding="8dp"
                android:hint="Email"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background" />

            <EditText
                android:id="@+id/distributor_name"
                android:layout_width="311dp"
                android:layout_height="56dp"
                android:layout_below="@id/loginText"
                android:layout_marginTop="4dp"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/baseline_person_add_alt_1_24"
                android:drawablePadding="8dp"
                android:hint="Name"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/LoginText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="666dp"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="24dp"
        android:padding="8dp"
        android:text="Already an user? Login"
        android:textAlignment="center"
        android:textColor="#0D65F8"
        android:textSize="14sp" />


</RelativeLayout>
